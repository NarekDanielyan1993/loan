{
  "require": {
    "slim/slim": "4.*",
    "php-di/php-di": "^7.0",
    "slim/psr7": "^1.6",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\Handlers\\": "app/handlers"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "platform": {
      "php": "8.2.12"
    },
    "process-timeout": 0
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public/",
    "test": "phpunit tests"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.1",
    "friendsofphp/php-cs-fixer": "^3.55"
  }
}
